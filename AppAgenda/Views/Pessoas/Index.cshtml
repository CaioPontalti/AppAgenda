@model IEnumerable<AppAgenda.Models.Pessoa>

@{
    ViewBag.Title = "Lista de Contatos";
}

<h2>Lista de Contatos</h2>

<p>
    @Html.ActionLink("Para adicionar um novo contato, clique aqui...", "Create")
</p>

@using (Html.BeginForm())
{

<div class="container">
    <div class="row">
        <div class="col-md-5">
            <input type="text" placeholder="Pesquisar Contato.." class="form-control txtPesq" name="nome"/>
        </div>
    </div>
</div>
}

<br />

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Deletar", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
